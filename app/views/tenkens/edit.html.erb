<%= render "shared/header" %>
  <div class='main'>
    <div class='container d-flex flex-column mt-5'>
      <h2 class='text-center'><%= @tenken.name %></h2>
      <div class='container my-5 mx-auto'>
        <%= form_with model: @tenken, local: true do |f| %>
        <div class='row'>
          <div class='col-md-8 pe-1'>
           <%= f.text_field :name, class:'form-control', placeholder: '点検名を入力してください（例：2021年度　夏期教室点検）' %>
          </div>
          <div class='col-md-4'>
            <%= f.submit '変更する', class:'btn btn-secondary'%>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<%= render "shared/footer" %>