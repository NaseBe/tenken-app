<%= form_with model: @user, url: user_registration_path, class:'user-registration', local: true do |f| %>

<div class='user-registration-form'>
<h2>ユーザー登録</h2>

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="registration-form-field">
    <%= f.label :nickname %><em>(12 characters maximum)</em><br />
    <%= f.text_field :nickname, autofocus: true,maxlength:'12' %>
  </div>

  <div class="registration-form-field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="registration-form-field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class:'registration-btn' %>
  </div>
  <div>
<% end %>

<%= render "devise/shared/links" %>
