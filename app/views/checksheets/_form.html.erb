<div class="container d-flex flex-column my-5">

<div class='row d-flex mb-md-3 mb-2'>
<p class='col-md-4'>
<%= link_to "教室一覧へ戻る", tenken_path(@tenken.id), class:"link-primary fs-5" %></p>
<div class='col-md-4'> </div>
</div>

<%= form_with model:([@tenken,@checksheet]), local: true do |f| %>
 <div class='row d-flex'>
 <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>教室番号【必須】</p>
 <div class='col-md-4'>
  <%= f.collection_select(:classroom_id, Classroom.all, :id, :number, {}, {class:"form-select"}) %>
  </div>
  </div>
  
  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>プロジェクター</p>
  <div class='col-md-4'>
  <%= f.select :projector, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
   <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>コンパネ</p>
  <div class='col-md-4'>
   <%= f.select :control_panel, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>マイク</p>
  <div class='col-md-4'>
  <%= f.select :mic, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>パソコン</p>
  <div class='col-md-4'>
  <%= f.select :pc, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>Blu-ray/DVDデッキ</p>
  <div class='col-md-4'>
  <%= f.select :bd_dvd_player, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>リモコン</p>
  <div class='col-md-4'>
  <%= f.select :remotes, {"OK":"OK", "NG":"NG", "電池交換済":"電池交換済"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
   </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>書画カメラ</p>
  <div class='col-md-4'>
   <%= f.select :ohc, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>スクリーン</p>
 <div class='col-md-4'>
  <%= f.select :screen, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>持込用端子</p>
  <div class='col-md-4'>
   <%= f.select :ports, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>持込用ケーブル</p>
  <div class='col-md-4'>
 <%= f.select :cables, {"OK":"OK", "NG":"NG"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>消耗品</p>
 <div class='col-md-4'>
  <%= f.select :expendables, {"OK":"OK", "補充済":"補充済", "交換済":"交換済"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
  </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>詳細、コメント等</p>
  <div class='col-md-4'>
  <%= f.text_area :details, class:"form-control", rows: "3"%>
  <%= f.file_field :image %>
  </div>
   </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>担当者１【必須】</p>
 <div class='col-md-4'>
  <%= f.collection_select(:staff, User.all, :nickname, :nickname, {include_blank: "--"}, {class:'form-select'}) %>
  </div>
   </div>

  <div class='row d-flex'>
  <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>担当者２</p>
  <div class='col-md-4'>
  <%= f.collection_select(:helper, User.all, :nickname, :nickname, {include_blank: "--"}, {class:'form-select'}) %>
  </div>
  </div>

  <div class='row d-flex'>
   <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>実施日【必須】</p>
   <div class='col-md-4 d-flex'>
  <%= raw sprintf(
    f.date_select(
      :date,
      class:'date-select',
      use_month_numbers: true,
      prompt: '--',
      start_year: 2015,
      end_year: (Time.now.year),
      date_separator: '%s'),
      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>"%>
  </div>
  </div>

  <div class='row d-flex'>
   <p class='col-md-4 mb-md-2 mb-0 mt-md-0 mt-2'>進捗状況【必須】</p>
  <div class='col-md-4'>
   <%= f.select :status, {"対応中":"対応中", "完了":"完了"}, {include_blank: "--"}, {class:'form-select'} %>
  </div>
   </div>

<div class="container d-flex ps-0">
<%= f.submit "送信", class:"btn btn-primary mt-3 px-5" %>
</div>
  <% end %>
 

</div>