<%= render "shared/header" %>
<div class='main'>
<h2 class="checksheet-start">点検結果を入力</h2>

<%= form_with url:"/tenkens/#{@tenken.id}/checksheets", method: :post, class:'create-checksheet', local: true do |f| %>
 <div class='checksheet-classroom'>
 教室番号
  <%= f.collection_select(:classroom_id, Classroom.all, :id, :number, {}, {class:"select-item"}) %>
  </div>
  
  <div class='checksheet-projector'>
  プロジェクター
  <select name="projector">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-conpane'>
  コンパネ
  <select name="control_panel">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-mic'>
  マイク
  <select name="mic">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-pc'>
  パソコン
  <select name="pc">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-player'>
  Blu-ray/DVDデッキ
  <select name="bd_dvd_player">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-remotes'>
  リモコン
  <select name="remotes">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  <option value= "電池交換済">電池交換済</option>
  </select>
  </div>

  <div class='checksheet-ohc'>
  書画カメラ
  <select name="ohc">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-screen'>
  スクリーン
  <select name="screen">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-ports'>
  持込用端子
  <select name="ports">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-cables'>
  持込用ケーブル
  <select name="cables">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "NG">NG</option>
  </select>
  </div>

  <div class='checksheet-expendables'>
  消耗品
  <select name="expendables">
  <option value= "">--</option>
  <option value= "OK">OK</option>
  <option value= "補充済">補充済</option>
  <option value= "交換済">交換済</option>
  </select>
  </div>

  <div class='checksheet-details'>
  NGを選択した場合、詳細を入力してください
  <%= f.text_area :details, class:"details-input" %>
  </div>

  <div class='checksheet-staff'>
 担当者１
  <select name="staff">
  <option value= "">--</option>
  <% @users.each do |user| %>
  <option value=<%= user.nickname %>><%= user.nickname %></option>
  <% end %>
  </select>
  </div>

  <div class='checksheet-helper'>
 担当者２
  <select name="helper">
  <option value= "">--</option>
  <% @users.each do |user| %>
  <option value=<%= user.nickname %>><%= user.nickname %></option>
  <% end %>
  </select>
  </div>

  <div class='checksheet-date'>
  実施日
  <%= raw sprintf(
    f.date_select(
      :date,
      class:'select-date',
      use_month_numbers: true,
      prompt: '--',
      start_year: 2015,
      end_year: (Time.now.year),
      date_separator: '%s'),
      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

 <div class='checksheet-status'>
 進捗状況
  <select name="status">
  <option value= "">--</option>
  <option value= "対応中">対応中</option>
  <option value= "完了">完了</option>
  </select>
  </div>

<div class="checksheet-btn">
<%= f.submit "送信" %>
</div>
  <% end %>

</div>
<%= render "shared/footer" %>